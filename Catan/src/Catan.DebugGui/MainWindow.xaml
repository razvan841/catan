<Window x:Class="Catan.DebugGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Catan Debug GUI"
        Width="1000"
        Height="700">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="160" />
        </Grid.ColumnDefinitions>

        <!-- Board -->
        <Canvas x:Name="BoardCanvas"
                Grid.Column="0"
                Background="LightBlue"/>

        <!-- Right-side controls -->
        <StackPanel Grid.Column="1"
            Margin="10"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Width="140">

            <!-- Current Player -->
            <TextBlock x:Name="CurrentPlayerLabel"
                    FontSize="14"
                    FontWeight="Bold"
                    TextAlignment="Center"
                    Margin="0,0,0,20"
                    Text="Player: "/>

            <!-- Buttons -->
            <Button Content="Roll Dice"
                    Height="40"
                    Margin="0,5,0,0"
                    Click="RollDiceButton_Click"/>

            <Button Content="Finish Turn"
                    Height="40"
                    Margin="0,5,0,0"
                    Click="FinishTurnButton_Click"/>

            <Button Content="Reshuffle Board"
                    Height="40"
                    Margin="0,20,0,0"
                    Click="ReshuffleButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
