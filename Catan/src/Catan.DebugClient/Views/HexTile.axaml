<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Catan.DebugClient.Views"
             x:Class="Catan.DebugClient.Views.HexTile"
             x:DataType="local:HexTile"
             Width="100" Height="115">
    <Grid>
        <Path Stroke="#6B8FB5" StrokeThickness="2" Stretch="Fill"
              Fill="{Binding Fill}"> <!-- Now compiled binding works -->
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="50,0" IsClosed="True">
                        <LineSegment Point="100,28"/>
                        <LineSegment Point="100,87"/>
                        <LineSegment Point="50,115"/>
                        <LineSegment Point="0,87"/>
                        <LineSegment Point="0,28"/>
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>

        <TextBlock Text="{Binding Label}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
    </Grid>
</UserControl>
