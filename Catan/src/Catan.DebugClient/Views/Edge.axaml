<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Catan.DebugClient"
             x:Class="Catan.DebugClient.Edge"
             x:DataType="local:Edge">
    <Rectangle Width="{Binding Length}" Height="3" Fill="{Binding Fill}" RenderTransformOrigin="0,0.5">
        <Rectangle.RenderTransform>
            <RotateTransform Angle="{Binding Angle}"/>
        </Rectangle.RenderTransform>
    </Rectangle>
</UserControl>
