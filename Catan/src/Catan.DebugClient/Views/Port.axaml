<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Catan.DebugClient.Views"
             x:Class="Catan.DebugClient.Views.Port"
             x:DataType="local:Port">

    <Grid>
        <!-- Circle with white background -->
        <Ellipse Fill="White" Stroke="Black" StrokeThickness="1"
                 Width="40" Height="40"
                 HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!-- Bold text inside the circle -->
        <TextBlock Text="{Binding Label}"
                   FontSize="12"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   TextAlignment="Center"/>
    </Grid>
</UserControl>
