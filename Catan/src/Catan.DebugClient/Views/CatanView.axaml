                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Game Log"
                            FontWeight="Bold"
                            FontSize="14"
                            Grid.Row="0"
                            Margin="0,0,0,4"/>

                    <Border Grid.Row="1"
                            Background="White"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            Padding="4">
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                    HorizontalScrollBarVisibility="Disabled">
                            <TextBlock Text="{Binding GameLog}"
                                    TextWrapping="Wrap"
                                    FontSize="10"
                                    VerticalAlignment="Top"/>
                        </ScrollViewer>
                    </Border>
                </Grid>

                <!-- ===== PLAYERS INFO PANEL ===== -->
                <Border Grid.Row="1"
                        Background="#E5E5E5"
                        CornerRadius="8"
                        Padding="8">

                    <!-- Outer Grid: 4 rows â†’ one for each player, evenly spaced -->
                    <Grid RowDefinitions="*,*,*,*" RowSpacing="6">

                        <!-- PLAYER 1 -->
                        <Border x:Name="PlayerPanel1" Background="#CFCFCF" CornerRadius="6" Padding="8" Grid.Row="0" BorderThickness="2" BorderBrush="{Binding Player1Border}">
                            <Grid ColumnDefinitions="80,*">
                                <TextBlock Text="{Binding Player1Name}" FontWeight="Bold" FontSize="16" VerticalAlignment="Center" Foreground="{Binding Player1Color}"/>
                                <Grid Grid.Column="1" ColumnDefinitions="*,*,*,*" RowDefinitions="Auto,Auto">
