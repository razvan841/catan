                                    <TextBlock Text="{Binding Player1Cards}" Grid.Column="0" Grid.Row="1" FontSize="14" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Dev Cards" Grid.Column="1" Grid.Row="0" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding Player1DevCards}" Grid.Column="1" Grid.Row="1" FontSize="14" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Knights" Grid.Column="2" Grid.Row="0" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding Player1Knights}" Grid.Column="2" Grid.Row="1" FontSize="14" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Points" Grid.Column="3" Grid.Row="0" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding Player1Points}" Grid.Column="3" Grid.Row="1" FontSize="14" HorizontalAlignment="Center"/>
