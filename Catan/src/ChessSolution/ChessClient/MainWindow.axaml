<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ChessClient.MainWindow"
        Width="800"
        Height="520"
        Title="Chess">

    <Grid ColumnDefinitions="Auto,200">
        <!-- Chess board -->
        <UniformGrid Name="BoardGrid"
                     Rows="8"
                     Columns="8"
                     Width="500"
                     Height="500"/>

        <!-- Move log -->
        <Border Grid.Column="1"
                BorderBrush="Black"
                BorderThickness="1"
                Margin="8">
            <ScrollViewer>
                <TextBlock Name="LogText"
                           FontSize="14"
                           TextWrapping="Wrap"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
