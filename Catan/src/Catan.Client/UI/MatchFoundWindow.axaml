<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Catan.Client.UI.MatchFoundWindow"
        Width="440"
        Height="240"
        CanResize="False"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        SystemDecorations="None"
        Background="Transparent">

    <Border Background="#06101F"
            CornerRadius="14"
            Padding="22"
            Margin="8"
            BoxShadow="0 0 15 #40000000">

        <StackPanel Spacing="16"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <!-- Title -->
            <TextBlock Text="Match Found!"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>

            <!-- Countdown -->
            <Border Background="#0B132B"
                    CornerRadius="8"
                    Padding="6,4"
                    HorizontalAlignment="Center">

                <TextBlock Text="{Binding CountdownText}"
                           FontSize="14"
                           Foreground="#E5E7EB"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Spacing="22"
                        Margin="0,8,0,0">

                <Button Content="Accept"
                        Width="120"
                        Height="38"
                        FontWeight="Bold"
                        Foreground="White"
                        CornerRadius="10"
                        Command="{Binding AcceptCommand}">
                    <Button.Styles>
                        <Style Selector="Button">
                            <Setter Property="Background" Value="#22C55E"/>
                        </Style>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="#16A34A"/>
                        </Style>
                        <Style Selector="Button:pressed">
                            <Setter Property="Background" Value="#15803D"/>
                        </Style>
                    </Button.Styles>
                </Button>

                <Button Content="Decline"
                        Width="120"
                        Height="38"
                        FontWeight="Bold"
                        Foreground="White"
                        CornerRadius="10"
                        Command="{Binding DeclineCommand}">
                    <Button.Styles>
                        <Style Selector="Button">
                            <Setter Property="Background" Value="#EF4444"/>
                        </Style>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="#DC2626"/>
                        </Style>
                        <Style Selector="Button:pressed">
                            <Setter Property="Background" Value="#B91C1C"/>
                        </Style>
                    </Button.Styles>
                </Button>
            </StackPanel>

        </StackPanel>
    </Border>
</Window>
