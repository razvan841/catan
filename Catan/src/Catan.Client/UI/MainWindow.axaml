<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="using:Catan.Client.UI"
        x:Class="Catan.Client.UI.MainWindow"
        Title="Catan Client"
        Width="900"
        Height="500">

    <Grid Margin="20">

        <!-- DISCONNECTED -->
        <StackPanel x:Name="DisconnectedPanel"
                    IsVisible="False"
                    Spacing="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <TextBlock Text="Unable to connect to server"
                       FontSize="16"
                       FontWeight="Bold"/>

            <TextBox x:Name="IpBox" Width="200" Watermark="IP Address"/>
            <TextBox x:Name="PortBox" Width="200" Watermark="Port"/>

            <Button Content="Reconnect"
                    Width="120"
                    Click="Reconnect_Click"/>
        </StackPanel>

        <!-- AUTH -->
        <StackPanel x:Name="AuthPanel"
                    IsVisible="False"
                    Spacing="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <TextBox x:Name="UsernameBox" Width="200" Watermark="Username"/>
            <TextBox x:Name="PasswordBox" Width="200" PasswordChar="*" Watermark="Password"/>

            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button Content="Login" Width="100" Click="Login_Click"/>
                <Button Content="Register" Width="100" Click="Register_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- LOBBY -->
        <Grid x:Name="LobbyPanel"
              IsVisible="False"
              RowDefinitions="Auto,*,Auto"
              ColumnDefinitions="3*,1*"
              RowSpacing="10"
              ColumnSpacing="10">

            <!-- TOP BAR -->
            <Grid Grid.Row="0" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Spacing="10">
                    <Button Content="Join Catan Queue" Click="Queue_Click_Catan"/>
                    <Button Content="Join Chess Queue" Click="Queue_Click_Chess"/>
                    <Button Content="Pulse" Click="Pulse_Click"/>
                    <Button Content="Disconnect" Click="Disconnect_Click"/>
                </StackPanel>

                <TextBlock x:Name="UsernameDisplay"
                           Grid.Column="1"
                           FontWeight="Bold"
                           Cursor="Hand"
                           TextDecorations="Underline"
                           ToolTip.Tip="Show profile"
                           PointerPressed="UsernameDisplay_Click"/>
            </Grid>

            <!-- CHAT -->
            <ScrollViewer Grid.Row="1" Grid.Column="0">
                <TextBlock x:Name="MessagesPanel" TextWrapping="Wrap"/>
            </ScrollViewer>

            <!-- LOG -->
            <Border Grid.Row="1" Grid.Column="1"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Padding="4">
                <ScrollViewer>
                    <TextBox x:Name="LogBox"
                             IsReadOnly="True"
                             Background="Transparent"
                             BorderThickness="0"
                             TextWrapping="Wrap"/>
                </ScrollViewer>
            </Border>

            <!-- TERMINAL -->
            <TextBox x:Name="CommandBox"
                     Grid.Row="2"
                     Grid.Column="0"
                     Watermark="Type /command args and press Enter"
                     KeyDown="CommandBox_KeyDown"/>
        </Grid>

        <!-- PROFILE VIEW HOST -->
        <ui:ProfileView x:Name="ProfileView"
                        IsVisible="False"/>
    </Grid>
</Window>
