<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Catan.Client.UI.MainWindow"
        Title="Catan Client"
        Width="900"
        Height="500">

    <Grid Margin="20">

        <!-- CONNECT / DISCONNECTED -->
        <StackPanel x:Name="DisconnectedPanel"
                    IsVisible="False"
                    Spacing="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <TextBlock Text="Unable to connect to server"
                       FontSize="16"
                       FontWeight="Bold"/>

            <TextBox x:Name="IpBox"
                     Width="200"
                     Watermark="IP Address"/>

            <TextBox x:Name="PortBox"
                     Width="200"
                     Watermark="Port"/>

            <Button Content="Reconnect"
                    Width="120"
                    Click="Reconnect_Click"/>
        </StackPanel>

        <!-- AUTH -->
        <StackPanel x:Name="AuthPanel"
                    IsVisible="False"
                    Spacing="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <TextBox x:Name="UsernameBox"
                     Width="200"
                     Watermark="Username"/>

            <TextBox x:Name="PasswordBox"
                     Width="200"
                     PasswordChar="*"
                     Watermark="Password"/>

            <StackPanel Orientation="Horizontal"
                        Spacing="10"
                        HorizontalAlignment="Center">
                <Button Content="Login"
                        Width="100"
                        Click="Login_Click"/>
                <Button Content="Register"
                        Width="100"
                        Click="Register_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- LOBBY -->
        <Grid x:Name="LobbyPanel"
              IsVisible="False"
              RowDefinitions="Auto,*,Auto"
              ColumnDefinitions="3*,2*"
              ColumnSpacing="10">

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal"
                        Spacing="10">

                <Button Content="Join Queue"
                        Click="Queue_Click"/>

                <Button Content="Pulse"
                        Click="Pulse_Click"/>
            </StackPanel>

            <!-- Messages -->
            <Border Grid.Column="1"
                    Grid.RowSpan="3"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Padding="8">

                <TextBox x:Name="MessagesBox"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            </Border>

            <!-- Log -->
            <TextBox x:Name="LogBox"
                     Grid.Row="1"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"/>

            <!-- Terminal -->
            <TextBox x:Name="CommandBox"
                     Grid.Row="2"
                     Watermark="Type /command args and press Enter"
                     KeyDown="CommandBox_KeyDown"/>
        </Grid>

    </Grid>
</Window>
