<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Catan.Client.UI.MainWindow"
        Title="Catan Client"
        Width="900"
        Height="500">

    <Grid Margin="20">

        <!-- CONNECT / DISCONNECTED -->
        <StackPanel x:Name="DisconnectedPanel"
                    IsVisible="False"
                    Spacing="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <TextBlock Text="Unable to connect to server"
                       FontSize="16"
                       FontWeight="Bold"/>

            <TextBox x:Name="IpBox"
                     Width="200"
                     Watermark="IP Address"/>

            <TextBox x:Name="PortBox"
                     Width="200"
                     Watermark="Port"/>

            <Button Content="Reconnect"
                    Width="120"
                    Click="Reconnect_Click"/>
        </StackPanel>

        <!-- AUTH -->
        <StackPanel x:Name="AuthPanel"
                    IsVisible="False"
                    Spacing="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">

            <TextBox x:Name="UsernameBox"
                     Width="200"
                     Watermark="Username"/>

            <TextBox x:Name="PasswordBox"
                     Width="200"
                     PasswordChar="*"
                     Watermark="Password"/>

            <StackPanel Orientation="Horizontal"
                        Spacing="10"
                        HorizontalAlignment="Center">
                <Button Content="Login"
                        Width="100"
                        Click="Login_Click"/>
                <Button Content="Register"
                        Width="100"
                        Click="Register_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- LOBBY -->
        <Grid x:Name="LobbyPanel"
              IsVisible="False"
              RowDefinitions="Auto,*,Auto"
              ColumnDefinitions="3*,1*"
              ColumnSpacing="10"
              RowSpacing="10"
              Margin="0,10,0,0">

            <!-- Top bar: buttons + username -->
            <Grid Grid.Row="0" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: buttons -->
                <StackPanel Orientation="Horizontal"
                            Spacing="10"
                            VerticalAlignment="Center">
                    <Button Content="Join Queue" Click="Queue_Click"/>
                    <Button Content="Pulse" Click="Pulse_Click"/>
                    <Button Content="Disconnect" Click="Disconnect_Click"/>
                </StackPanel>

                <!-- Right: username -->
                <TextBlock x:Name="UsernameDisplay"
                           Grid.Column="1"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           FontWeight="Bold"
                           FontSize="14"/>
            </Grid>

            <!-- MESSAGES (Left, bigger) -->
            <ScrollViewer Grid.Row="1" Grid.Column="0"
                          HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Auto"
                          Margin="0,5,0,0">
                <TextBlock x:Name="MessagesPanel"
                           TextWrapping="Wrap"/>
            </ScrollViewer>

            <!-- LOG (Right, smaller, single border) -->
            <Border Grid.Row="1" Grid.Column="1"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Padding="4"
                    Margin="0,5,0,0">
                <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                              VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="LogBox"
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             Background="Transparent"
                             BorderThickness="0"/>
                </ScrollViewer>
            </Border>

            <!-- TERMINAL (under messages only) -->
            <TextBox x:Name="CommandBox"
                     Grid.Row="2" Grid.Column="0"
                     Watermark="Type /command args and press Enter"
                     KeyDown="CommandBox_KeyDown"
                     Margin="0,5,0,0"/>
        </Grid>

    </Grid>
</Window>
