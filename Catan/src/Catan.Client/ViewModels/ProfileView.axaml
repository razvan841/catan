<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Catan.Client.UI.ProfileView">

    <Grid RowDefinitions="Auto,*"
          ColumnDefinitions="3*,1*"
          ColumnSpacing="10"
          RowSpacing="10">

        <!-- HEADER -->
        <StackPanel Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    Spacing="10">

            <Button Content="â† Back"
                    Click="Back_Click"/>

            <TextBlock Text="Profile"
                       FontWeight="Bold"
                       FontSize="16"/>
        </StackPanel>

        <!-- MATCH HISTORY (75% width) -->
        <Border Grid.Row="1"
                BorderBrush="Gray"
                BorderThickness="1"
                Padding="6">

            <StackPanel>
                <TextBlock Text="Match History"
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>

                <!-- ListBox with built-in scrollbars -->
                <ListBox x:Name="MatchHistoryList"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            </StackPanel>
        </Border>

        <!-- FRIENDS (25% width) -->
        <Border Grid.Row="1"
                Grid.Column="1"
                BorderBrush="Gray"
                BorderThickness="1"
                Padding="6">

            <StackPanel>
                <TextBlock Text="Friends"
                           FontWeight="Bold"
                           Margin="0,0,0,5"/>

                <!-- ListBox with vertical scroll -->
                <ListBox x:Name="FriendList"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"/>

                <TextBlock x:Name="StatusText"
                           Margin="0,10,0,0"
                           FontStyle="Italic"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
