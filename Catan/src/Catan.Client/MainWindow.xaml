<Window x:Class="Catan.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Catan Client" Height="450" Width="600">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Username -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Username:" VerticalAlignment="Center"/>
            <TextBox x:Name="UsernameBox" Width="150" Margin="10,0"/>
            <Button Content="Register" Click="Register_Click"/>
        </StackPanel>

        <!-- Actions -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <Button Content="Join Queue" Width="100" Click="Queue_Click"/>
            <Button Content="Pulse" Width="100" Margin="10,0" Click="Pulse_Click"/>
        </StackPanel>

        <!-- Match Controls -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,10">
            <Button Content="Accept Match" Width="120" Click="AcceptMatch_Click"/>
            <Button Content="Decline Match" Width="120" Margin="10,0" Click="DeclineMatch_Click"/>
        </StackPanel>

        <!-- Log -->
        <TextBox x:Name="LogBox"
                 Grid.Row="3"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"/>
    </Grid>
</Window>
